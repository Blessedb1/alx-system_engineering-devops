# COnfigure HAProxy

sudo apt-get update
sudo apt-get install haproxy -y

sed -i -e '$aENABLED=1\n' /etc/default/haproxy
sed -i -e '$a\listen balancer\n\tbind *:80\n\tbalance roundrobin\n\tserver 176572-web-01 176572-web-01:80 check\n\tserver 176572-web-02 34.237.91.136:80 check\n' /etc/haproxy/haproxy.cfg
service haproxy restart
